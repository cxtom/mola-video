
.mola-video
    display: block
    position: absolute
    background-size: 100%
    background-repeat: no-repeat

    &-iframe,
    &-raw
        width: 100%
        height: 100%
        opacity: 0
        visibility: hidden

    &.state-start &-iframe,
    &.state-start &-raw
        opacity: 1
        visibility: visible
